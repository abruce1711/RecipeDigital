function rating_click(id) {
    var rating = document.getElementById('rating');
    if(!sessionStorage.getItem("rating_set")) {
        sessionStorage.rating_set = id;
        rating_hover(id);
        if(id == 'pizza_1') {
            rating.value = 1;
        } else if(id == 'pizza_2') {
            rating.value = 2;
        }  else if(id == 'pizza_3') {
            rating.value = 3;
        }  else if(id == 'pizza_4') {
