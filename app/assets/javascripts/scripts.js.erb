function check_rating() {
    var form = document.getElementById('comment_form');
    var title = document.getElementById('comment_title');
    var body = document.getElementById('comment_body');

    if(!sessionStorage.rating_set) {
        $.confirm({
            title: 'Please add rating',
            content: "Please add a rating to your comment, click on the empty pizza shapes and rate the recipe out of 5 pizzas!",
            buttons: {
                OK: {
                    btnClass: 'pop_up_confirm',
                    action: function() {}
                }
            }
        });
    } else if (title.value.length == 0 || body.value.length == 0){
        $.confirm({
            title: 'Please fill in all fields',
            content: "Please add a title and comment",
            buttons: {
                OK: {
                    btnClass: 'pop_up_confirm',
                    action: function() {}
                }
            }
        });
    } else {
        form.submit();
    }
}