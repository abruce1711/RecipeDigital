<div class="container">
  <div class="row">
    <%= form_for(recipe) do |f| %>
      <div class="col-md-6 col-md-offset-3">
        <div class="new_recipe_form">

          <% if recipe.errors.any? %>
            <div class="form_error">
              <ul>
                <% recipe.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.text_field :title, :placeholder => "Recipe Title" %>

          <%= f.text_area :description, :placeholder => "Recipe Description" %>

          <%= f.submit 'Create Recipe', :class => 'create_recipe_button' %>
        </div>
    <% end %>
    </div>
  </div>
</div>