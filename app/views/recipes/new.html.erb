<% content_for :title, "Create Recipe" %>
<div class="container">
  <div class="row">
    <%= form_for(@recipe) do |f| %>
      <div class="col-md-6 col-md-offset-3">
        <div class="new_recipe_form">

          <% if @recipe.errors.any? %>
            <div class="form_error">
              <ul>
                <% @recipe.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= f.text_field :title, :placeholder => "Recipe Title", :required => 'required' %>

          <%= f.text_area :description, :placeholder => "Recipe Description", :required => 'required' %>

          <label>Upload image</label>
          <%= f.file_field :cover, :class => 'file_field' %>

          <label>Add tags</label>
          <input name='tags' placeholder="E.g. Breakfast, Vegan, Fish">

          <%= f.submit 'Create Recipe', :class => 'create_recipe_button' %>
        </div>
    <% end %>
    </div>
  </div>
</div>

<script>
    var input = document.querySelector('input[name=tags]'),
        tagify = new Tagify( input );
</script>