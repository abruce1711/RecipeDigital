<% content_for :title, "Edit Details" %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="user_form_box">
        <div class="user_form_items">
          <h2>Edit Details</h2>

          <%= form_for @user, :html => {:id =>  "edit_user_form"} do |f|%>

            <div class="field">
              <%= f.label :avatar %>
              <%= f.file_field :avatar, :class => 'file_field' %>
            </div>

            <div class="field">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>

            <div class="field">
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>

            <div class="field">
              <%= f.label :bio %><br />
              <%= f.text_area :bio, :autocomplete => :off %>
            </div>



            <div class="actions">
              <button type="submit" class="create_recipe_button">Save Changes</button>
              <%= link_to @user, class: "no-text-decoration" do %><button type="button" class="create_recipe_button" >Cancel</button><% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>