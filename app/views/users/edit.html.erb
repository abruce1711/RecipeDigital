<% content_for :title, "Confirmation" %>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="user_form_box">
        <div class="user_form_items">
          <h2>Edit Details</h2>

          <%= form_for @user do |f|%>

            <div class="field">
              <%= f.label :avatar %>
              <%= f.file_field :avatar, :class => 'file_field' %>
            </div>

            <div class="field">
              <%= f.label :first_name %>
              <%= f.text_field :first_name %>
            </div>

            <div class="field">
              <%= f.label :last_name %>
              <%= f.text_field :last_name %>
            </div>

            <div class="field">
              <%= f.label :username %>
              <%= f.text_field :username %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email" %>
            </div>

            <div class="actions">
              <%= f.submit "Save Changes" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>